{
  "name": "react-text-galaxy",
  "version": "0.8.5",
  "description": "Text galaxy component based on canvas for React.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "prettier": "prettier -w \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run prettier && npm run lint",
    "pub": "npm publish --access public && rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DynamicIdeasAI/react-text-galaxy.git"
  },
  "keywords": [
    "text",
    "galaxy",
    "spiral"
  ],
  "author": "DynamicIdeas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DynamicIdeasAI/react-text-galaxy/issues"
  },
  "homepage": "https://github.com/DynamicIdeasAI/react-text-galaxy#readme",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
